<div style="display: flex; justify-content: center; margin-top: 2rem; margin-left: auto; margin-right: auto">
  <h2>Atualização de usuários</h2>
</div>


{{#each users}}
  <div class="card form users_form">
    <div class="card-body">
      <h4>{{name}}</h4>
      <p>{{email}}</p>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" {{#if isAdmin}} checked {{else}}  {{/if}} id="isAdmin" name="isAdmin" disabled>
          <label class="form-check-label" for="isAdmin">Administrador</label>
        </div>
        <a href="/admin/users/edit/{{id}}" class="btn btn-outline-primary mt-3">Editar</a>
        <a href="/admin/users/excluir/{{_id}}" class="btn btn-outline-danger mt-3">Excluir</a>
    </div>
  </div>
  <div class="d-flex m-auto" style="justify-content: center;">
    <div style="background-color: #007bff; width: 50px; height: 2.5px; margin-top: 12px; margin-bottom: -2rem"></div>
  </div>  
{{else}}
  <div class="d-flex mt-3">
    <img src="/img/such-empty.png" alt="such-empty" style="margin: auto">
  </div>
{{/each}}