<h2 class="mt-3">Lista de categorias: </h2>
<hr>
<a href="/admin/categoria/add"><button class="btn btn-primary">Criar Nova</button></a>


<div class="mw-60 d-flex">
  {{#each categorias}}
    <div class="card mt-2 m-auto">
      <div class="card-body">
        <h4>
          {{nome}}
        </h4>
        <small>
          <strong>Categoria:</strong>
          {{slug}}</small><br>
        <small>
          <strong>Data de criação: </strong>
          {{date}}
        </small><br>
        <div class="d-flex justify-content-between">
          <a href="/admin/categorias/edit/{{id}}">
            <button class="btn btn-outline-primary mt-3">Editar</button>
          </a>
          <form action="/admin/categorias/excluir" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-outline-danger mt-3">Exclcuir</button>
          </form>
        </div>
      </div>
    </div>
  {{else}}
      <div class="d-flex m-auto">
        <img src="/img/such-empty.png" alt="such-empty">
      </div>
  {{/each}}
</div>