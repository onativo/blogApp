<h2 class="mt-3">Lista de publicações</h2>
<hr>
<a href="/admin/posts/add">
  <button class="btn btn-primary">Criar nova</button>
</a>

{{#each posts}}
    <div class="card mt-3 ml-auto mr-auto" style=" max-width: 60%; margin: auto;">
      <div class="card-body">
        <h4> <strong>{{title}}</strong> </h4><br>
        <small><strong>Slug: </strong>{{slug}} </small><br>
        <small><strong>Descrição: </strong>{{description}}</small><br>
        <small><strong>Conteúdo: </strong>{{content}}</small><br>
        <small><strong>Data de criação: </strong>{{data}} </small><br>
        <small><strong>Categoria: </strong>{{categoria.nome}}</small>
        <div class="d-flex justify-content-between">
          <a href="/admin/posts/edit/{{_id}}" >
            <button class="btn btn-outline-primary mt-3">Editar</button>
          </a>
          <form action="/admin/posts/excluir" method="post">
            <input type="hidden" name="id" value="{{id}}">
            <button type="submit" class="btn btn-outline-danger mt-3">Exclcuir</button>
          </form>
        </div>
      </div>
    </div>
    <div class="d-flex m-auto" style="justify-content: center;">
      <div style="background-color: #007bff; width: 50px; height: 2.5px; margin-top: 12px; margin-bottom: -1px"></div>
    </div>
  {{else}}
      <div class="d-flex mt-3">
        <img src="/img/such-empty.png" alt="such-empty" style="margin: auto">
      </div>
  {{/each}}