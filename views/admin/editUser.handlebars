<div style="display: flex; justify-content: center; margin-top: 2rem; margin-left: auto; margin-right: auto">
  <h2>Cadastro de usu√°rios</h2>
</div>
<div class="card form">
  <form class="card-body" method="post" action="/user/cadastro">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-row">
      <div class="col">
        <div class="form-group">
          <label for="name" class="label-form">Seu nome</label>
          <input type="text" class="form-control" name="name" placeholder="Digite seu nome" value="{{user.name}}">
        </div>
      </div>
      <div class="col">
        <div class="form-group col">
          <label for="email" class="label-form">Seu e-mail</label>
          <input type="email" class="form-control" name="email" placeholder="Digite seu email" value="{{user.email}}">
        </div>
      </div>
    </div>
    <div>
      <label for="password" class="label-form">Senha</label>
      <input type="password" class="form-control" name="password" placeholder="Digite sua senha" value="{{user.password}}">
      <br>
      <label for="password2" class="label-form">Repita a senha</label>
      <input type="password" class="form-control" name="password2" placeholder="Confirme sua senha" value="{{user.password}}">
    </div>
    <br>
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" {{#if user.isAdmin}} checked {{else}}  {{/if}} id="isAdmin" name="isAdmin">
      <label class="form-check-label" for="isAdmin">Administrador?</label>
    </div>
    <br>
    <button type="submit" class="btn btn-outline-primary">Atualizar</button>
  <form>
</div>